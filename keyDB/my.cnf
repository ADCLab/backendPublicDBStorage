[mysqld]
# Reduce memory footprint
# Disable InnoDB (skip-innodb) â†’ MyISAM uses much less RAM.
skip-innodb
default_storage_engine=MyISAM

# Key buffer for MyISAM (since InnoDB is disabled)
key_buffer_size = 8M
max_connections = 5
table_open_cache = 32
thread_cache_size = 2
query_cache_size = 4M
tmp_table_size = 4M
max_heap_table_size = 4M

# Disable performance schema (saves memory)
performance_schema = 0

# Reduce log size
log_bin = 0
slow_query_log = 0